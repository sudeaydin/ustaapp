# Development Environment Configuration for ustam App
FLASK_ENV=development
SECRET_KEY=dev-secret-key-change-in-production
JWT_SECRET_KEY=dev-jwt-secret-key-change-in-production

# Database Configuration
DATABASE_URL=sqlite:///app.db

# BigQuery Analytics Configuration (Optional in development)
BIGQUERY_LOGGING_ENABLED=false
BIGQUERY_PROJECT_ID=ustam-development
BIGQUERY_DATASET_ID=ustam_analytics_dev
BIGQUERY_LOCATION=US

# Analytics Configuration
ANALYTICS_ENVIRONMENT=development
DATA_RETENTION_DAYS=30
MONITORING_ENABLED=false
COST_CONTROLS_ENABLED=false

# Security Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000
RATE_LIMIT_ENABLED=false

# External Services (Test keys)
IYZICO_API_KEY=sandbox-test-key
IYZICO_SECRET_KEY=sandbox-test-secret
IYZICO_BASE_URL=https://sandbox-api.iyzipay.com

# Email Configuration (Development)
SMTP_SERVER=localhost
SMTP_PORT=1025
SMTP_USERNAME=test@example.com
SMTP_PASSWORD=test

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=uploads
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif,pdf,doc,docx

# Logging
LOG_LEVEL=DEBUG
LOG_TO_FILE=false