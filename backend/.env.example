# Flask environment
FLASK_CONFIG=development
APP_ENV=development

# Secrets
SECRET_KEY=change-me
JWT_SECRET_KEY=change-me
JWT_ACCESS_TOKEN_EXPIRES=3600

# Database configuration (local development)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ustaapp

# Cloud SQL / Postgres (optional overrides)
# DB credentials used by SQLAlchemy when connecting to Cloud SQL
DB_USER=
DB_PASSWORD=
DB_NAME=
# Optional TCP host override. Leave empty when using the Unix socket below.
DB_HOST=127.0.0.1
DB_PORT=5432
# Fully qualified Cloud SQL instance name (project:region:instance)
CLOUD_SQL_CONNECTION_NAME=
# Base directory where Cloud SQL Unix sockets are mounted
DB_SOCKET_DIR=/cloudsql
# Explicit Unix socket path for the instance (overrides DB_SOCKET_DIR + CLOUD_SQL_CONNECTION_NAME)
INSTANCE_UNIX_SOCKET=

# Feature toggles
RUN_DB_CREATE_ALL=true
ENABLE_INIT_DB_ENDPOINT=true
RATE_LIMIT_REDIS_URL=redis://localhost:6379/3
RATE_LIMIT_DEFAULT_REQUESTS=100
RATE_LIMIT_DEFAULT_WINDOW=60

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
# Legacy configuration (used by some scripts)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# File uploads
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif,pdf,doc,docx

# External services
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
IYZICO_API_KEY=
IYZICO_SECRET_KEY=
IYZICO_BASE_URL=https://sandbox-api.iyzipay.com

# BigQuery Analytics
BIGQUERY_LOGGING_ENABLED=auto
BIGQUERY_PROJECT_ID=
BIGQUERY_DATASET_ID=ustam_analytics
BIGQUERY_LOCATION=US
BIGQUERY_CREDENTIALS_PATH=

# Analytics / Monitoring
ANALYTICS_ENVIRONMENT=development
DATA_RETENTION_DAYS=365
MONITORING_ENABLED=true
COST_CONTROLS_ENABLED=true
RATE_LIMIT_ENABLED=true

# Email configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=

# Logging
LOG_LEVEL=INFO
LOG_TO_FILE=true

# Google Cloud credentials (if required)
GOOGLE_APPLICATION_CREDENTIALS=
