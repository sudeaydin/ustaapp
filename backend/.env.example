# Example Environment Configuration for ustam App
# Copy this file to .env.production or .env.development and fill in your values

FLASK_ENV=production
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# Database Configuration
DATABASE_URL=sqlite:///app.db

# BigQuery Analytics Configuration
BIGQUERY_LOGGING_ENABLED=true
BIGQUERY_PROJECT_ID=your-project-id
BIGQUERY_DATASET_ID=ustam_analytics
BIGQUERY_LOCATION=US

# Analytics Configuration
ANALYTICS_ENVIRONMENT=production
DATA_RETENTION_DAYS=365
MONITORING_ENABLED=true
COST_CONTROLS_ENABLED=true

# Security Configuration
CORS_ORIGINS=https://yourdomain.com
RATE_LIMIT_ENABLED=true

# External Services
IYZICO_API_KEY=your-iyzico-api-key
IYZICO_SECRET_KEY=your-iyzico-secret-key
IYZICO_BASE_URL=https://api.iyzipay.com

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=uploads
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif,pdf,doc,docx

# Logging
LOG_LEVEL=INFO
LOG_TO_FILE=true