# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=change-this-to-very-secure-random-string-in-production
JWT_SECRET_KEY=change-this-to-another-very-secure-random-string

# Database Configuration
DATABASE_URL=sqlite:///app.db
# For PostgreSQL in production:
# DATABASE_URL=postgresql://username:password@host:5432/database_name
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=1800

# CORS Settings (comma-separated list of allowed origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000

# Rate Limiting (optional, defaults if not set)
RATE_LIMIT_STORAGE=memory://
# For production with Redis:
# RATE_LIMIT_STORAGE=redis://localhost:6379
RATE_LIMIT_PER_DAY=200
RATE_LIMIT_PER_HOUR=50

# Email Configuration (for password reset)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password

# SMS Configuration (for 2FA - future feature)
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+1234567890

# Payment Gateway (currently disabled)
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_PUBLISHABLE_KEY=pk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# Google Cloud (for BigQuery, if using)
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json
GOOGLE_CLOUD_PROJECT=your-project-id

# Session Configuration
SESSION_TIMEOUT_MINUTES=30
JWT_ACCESS_TOKEN_EXPIRES=86400  # 24 hours in seconds

# Security Headers
ENABLE_HSTS=False  # Set to True in production with HTTPS
HSTS_MAX_AGE=31536000

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Feature Flags
ENABLE_ANALYTICS=True
ENABLE_BIGQUERY_LOGGING=False
ENABLE_EMAIL_VERIFICATION=False
ENABLE_SMS_VERIFICATION=False
ENABLE_2FA=False

# Upload Settings
MAX_UPLOAD_SIZE=5242880  # 5MB in bytes
UPLOAD_FOLDER=uploads
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif,webp

# Production Settings (set these in production)
# FLASK_ENV=production
# FLASK_DEBUG=False
# Use strong random strings for SECRET_KEY and JWT_SECRET_KEY
# Update ALLOWED_ORIGINS with your actual domains
# Update DATABASE_URL with PostgreSQL connection string
# Use Redis for RATE_LIMIT_STORAGE
