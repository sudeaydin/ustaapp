# Flask environment
FLASK_CONFIG=production
APP_ENV=production

# Secrets (populate with secure values)
SECRET_KEY=
JWT_SECRET_KEY=
JWT_ACCESS_TOKEN_EXPIRES=3600

# Cloud SQL Postgres connection
DB_USER=
DB_PASSWORD=
DB_NAME=
# Leave DB_HOST empty to use the Unix socket path below.
DB_HOST=
DB_PORT=5432
CLOUD_SQL_CONNECTION_NAME=project:region:instance
DB_SOCKET_DIR=/cloudsql

# Fallback SQLAlchemy URL (if using a direct connection string)
DATABASE_URL=

# Feature toggles (keep disabled in production)
RUN_DB_CREATE_ALL=false
ENABLE_INIT_DB_ENDPOINT=false
RATE_LIMIT_REDIS_URL=
RATE_LIMIT_DEFAULT_REQUESTS=100
RATE_LIMIT_DEFAULT_WINDOW=60

# CORS domains allowed in production
CORS_ALLOWED_ORIGINS=https://ustaapp.com,https://www.ustaapp.com,https://app.ustaapp.com
CORS_ORIGINS=https://ustaapp.com,https://www.ustaapp.com,https://app.ustaapp.com

# File uploads
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif,pdf,doc,docx

# External services
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
IYZICO_API_KEY=
IYZICO_SECRET_KEY=
IYZICO_BASE_URL=https://api.iyzipay.com

# BigQuery Analytics
BIGQUERY_LOGGING_ENABLED=auto
BIGQUERY_PROJECT_ID=
BIGQUERY_DATASET_ID=ustam_analytics
BIGQUERY_LOCATION=EU
BIGQUERY_CREDENTIALS_PATH=

# Analytics / Monitoring
ANALYTICS_ENVIRONMENT=production
DATA_RETENTION_DAYS=365
MONITORING_ENABLED=true
COST_CONTROLS_ENABLED=true
RATE_LIMIT_ENABLED=true

# Email configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=

# Logging
LOG_LEVEL=INFO
LOG_TO_FILE=true

# Google Cloud credentials path (if running outside GAE)
GOOGLE_APPLICATION_CREDENTIALS=
