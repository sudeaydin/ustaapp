<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude sensitive data from cloud backup -->
        <exclude domain="sharedpref" path="FlutterSecureStorage"/>
        <exclude domain="sharedpref" path="auth_token"/>
        <exclude domain="database" path="user_credentials.db"/>
    </cloud-backup>
    
    <device-transfer>
        <!-- Allow basic app data transfer to new device -->
        <include domain="sharedpref" path="app_preferences"/>
        <include domain="file" path="cache/"/>
    </device-transfer>
</data-extraction-rules>